# This defines spacing, tab, whitespace, and encoding properties to provide
# consistency across editing environments and developers

# Plugins for your editor of choice can be found here:
# http://editorconfig.org/#download

# top-most EditorConfig file
root = true

# Defaults inherited by all files including:
#   - js             - html
#   - less           - css
#   - config         - xml
#   - json           - csproj
#   - cshtml
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

max_line_length = 180

[*.java]
indent_size = 4

[*.groovy]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.sql]
indent_size = 4

[*.js]
indent_size = 2


